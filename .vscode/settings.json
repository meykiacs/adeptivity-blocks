{
	"eslint.enable": true,
	"[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"css.validate": false,
	"scss.validate": false,
	"less.validate": false,
	"stylelint.validate": [
		"css",
		"scss"
	],
	"[scss]": {
		"editor.codeActionsOnSave": {
			"source.fixAll.stylelint": true
		}
	},
	"[css]": {
		"editor.formatOnSave": false,
		"editor.codeActionsOnSave": {
			"source.fixAll.stylelint": true
		}
	},
	"phpSniffer.autoDetect": true,
}